<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ctepe.persentil_hesaplama.weight_erkek"
    android:gravity="top|center_horizontal"
    android:id="@+id/fragment_layout"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_gravity="top|center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="89dp"
                android:layout_height="55dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Ideal Değerler"
                android:id="@+id/textView8"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="89dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="21dp" />

            <TextView
                android:layout_width="89dp"
                android:layout_height="55dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Persentil"
                android:id="@+id/textView9"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false"
                android:layout_alignTop="@+id/textView12"
                android:layout_toRightOf="@+id/textView12"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="21dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="89dp"
                android:layout_height="34dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Ağırlık"
                android:id="@+id/textView5"
                android:layout_below="@+id/textView12"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="21dp" />

            <TextView
                android:layout_width="89dp"
                android:layout_height="34dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text_agirlik_ideal"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignLeft="@+id/textView12"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="21dp" />

            <TextView
                android:layout_width="89dp"
                android:layout_height="34dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text_agirlik_persentil"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignLeft="@+id/textView9"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="21dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="89dp"
                android:layout_height="34dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Boy"
                android:id="@+id/textView6"
                android:layout_below="@+id/textView5"
                android:layout_alignLeft="@+id/textView5"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="21dp" />

            <TextView
                android:layout_width="89dp"
                android:layout_height="34dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text_ideal_boy"
                android:layout_alignTop="@+id/textView6"
                android:layout_alignLeft="@+id/text_agirlik_ideal"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="21dp" />

            <TextView
                android:layout_width="89dp"
                android:layout_height="34dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text_boy_persentil"
                android:layout_alignTop="@+id/textView6"
                android:layout_alignLeft="@+id/text_agirlik_persentil"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="21dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="89dp"
                android:layout_height="55dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Baş Çevresi"
                android:id="@+id/textView7"
                android:layout_below="@+id/textView6"
                android:layout_alignLeft="@+id/textView5"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="21dp" />

            <TextView
                android:layout_width="89dp"
                android:layout_height="55dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text_ideal_bas_cevre"
                android:layout_alignTop="@+id/textView7"
                android:layout_alignLeft="@+id/text_agirlik_ideal"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="21dp" />

            <TextView
                android:layout_width="89dp"
                android:layout_height="55dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text_persentil_bas_cevre"
                android:layout_alignTop="@+id/text_ideal_bas_cevre"
                android:layout_alignLeft="@+id/text_agirlik_persentil"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="21dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="34dp">

            <TextView
                android:layout_width="178dp"
                android:layout_height="34dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Vücut Alanı"
                android:id="@+id/textView10"
                android:layout_below="@+id/textView7"
                android:layout_alignLeft="@+id/textView5"
                android:layout_gravity="center|right"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="0dp"
                android:textSize="21dp" />

            <TextView
                android:layout_width="89dp"
                android:layout_height="34dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text_vucut_alani"
                android:layout_alignTop="@+id/textView10"
                android:layout_toRightOf="@+id/textView10"
                android:layout_gravity="center|right"
                android:gravity="center"
                android:textSize="21dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="178dp"
                android:layout_height="34dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Boya Göre Ağırlık"
                android:id="@+id/textView11"
                android:layout_below="@+id/textView10"
                android:layout_alignLeft="@+id/textView10"
                android:layout_gravity="center|right"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="0dp"
                android:textSize="21dp" />

            <TextView
                android:layout_width="89dp"
                android:layout_height="34dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text_boy_gore_agirlik"
                android:layout_alignTop="@+id/textView11"
                android:layout_alignLeft="@+id/text_vucut_alani"
                android:layout_gravity="center|right"
                android:gravity="center"
                android:textSize="21dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
