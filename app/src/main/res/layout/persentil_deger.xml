<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ctepe.persentil_hesaplama.weight_erkek"
    android:gravity="top|center_horizontal"
    android:id="@+id/dis_layout">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_gravity="top|center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="34dp"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Yaş"
                android:id="@+id/textView1"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical|center|center_horizontal"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentStart="false"
                android:textSize="16dp" />

            <TextView
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Ağırlık"
                android:id="@+id/textView2"
                android:gravity="center_vertical|center|center_horizontal"
                android:layout_alignTop="@+id/textView1"
                android:layout_toRightOf="@+id/textView1"
                android:textSize="16dp" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Boy"
                android:id="@+id/textView3"
                android:layout_alignTop="@+id/textView1"
                android:layout_toRightOf="@+id/textView2"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="16dp" />

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Baş Çevresi"
                android:id="@+id/textView4"
                android:layout_alignTop="@+id/text_yas"
                android:layout_alignLeft="@+id/textView5"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text_yas"
                android:gravity="center_vertical|center_horizontal"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/textView1"
                android:textSize="16dp" />

            <TextView
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text_agirlik"
                android:gravity="center_vertical|center|center_horizontal"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignTop="@+id/text_yas"
                android:textSize="16dp" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text_boy"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignTop="@+id/text_yas"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="16dp" />

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text_bas_cev"
                android:layout_alignTop="@+id/text_yas"
                android:layout_alignLeft="@+id/textView5"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="16dp" />

        </LinearLayout>

        <view
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="android.support.v4.view.ViewPager"
            android:id="@+id/pager" />

    </LinearLayout>

</LinearLayout>

